{
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "node16",
      "preserveConstEnums": true,
      "sourceMap": false,
      "removeComments": false,
      "outDir": "./dist",
      "declaration": true,
      "strict": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts"
    ]
}
